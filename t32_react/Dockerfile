# Используйте официальный образ Node.js
FROM node:latest

# Создайте и установите рабочую директорию
WORKDIR /usr/src/app

# Скопируйте package.json и package-lock.json для установки зависимостей
COPY package*.json ./

# Установите зависимости
RUN npm install

# Скопируйте все файлы в текущую директорию
COPY . .

# Соберите приложение (если это необходимо)
# Если ваше приложение запускается через npm start, то этот шаг, возможно, не понадобится
RUN npm run build

# Определите команду для запуска приложения при запуске контейнера
CMD ["npm", "start"]
